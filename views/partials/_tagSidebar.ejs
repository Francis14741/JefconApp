<% layout('partials/layout') %>

<div class="tag-sidebar">
  <h3 class="text-light lead">Tags</h3>
  <ul class="text-light lead">
    <% if (tags && tags.length) { %> <% tags.forEach(tag => { %>
    <li><a href="/blogs/tags/<%= tag %>"><%= tag %></a></li>
    <% }) %> <% } else { %>
    <li>No tags available</li>
    <% } %>
  </ul>
</div>
