<% layout('partials/layout') %>

<% 
  tag = typeof tag !== 'undefined' ? tag : { title: "Unknown Tag" };
  blogs = typeof blogs !== 'undefined' ? blogs : [];
%>

<div class="container mt-5 text-light text-center">
  <h2 class="mb-4"><em><u>Tag: <%= tag.title %></u></em></h2>

  <% if (blogs.length > 0) { %>
    <h4 class="mb-3"><em><u>Blogs</u></em></h4>
    <div class="row">
      <% blogs.forEach(blog => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <p class="card-text"><%= blog.summary || blog.content.substring(0, 100) + "..." %></p>
              <a href="/blogs/<%= blog.slug %>" class="btn btn-primary">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p>No blogs found for this tag.</p>
  <% } %>
</div>