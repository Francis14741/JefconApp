<div class="container mt-5">
  <h2 class="mb-4 text-success text-center text-capitalize">
    Archive: <%= category %>
  </h2>

  <% if (blogs.length === 0) { %>
  <p>No posts found in this category.</p>
  <% } else { %> <% blogs.forEach((blog) => { %>
  <div class="card mb-3">
    <div class="card-body">
      <h4><%= blog.title %></h4>
      <p><%= blog.content.substring(0, 150) %>...</p>
      <a href="/blogs/<%= blog.slug %>" class="btn btn-sm btn-success"
        >Read More</a
      >
    </div>
  </div>
  <% }) %> <% } %>

  <!-- Pagination Buttons -->
  <div class="d-flex justify-content-between mt-4">
    <% if (currentPage > 1) { %>
    <a href="?page=<%= currentPage - 1 %>" class="btn btn-outline-success">
      ← Older Posts
    </a>
    <% } else { %>
    <span></span>
    <% } %> <% if (currentPage < totalPages) { %>
    <a href="?page=<%= currentPage + 1 %>" class="btn btn-outline-success">
      Newer Posts →
    </a>
    <% } %>
  </div>
</div>
