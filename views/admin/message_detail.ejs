<% layout('layouts/admin_layout') %>

<div class="container mt-4">
    <h2 class="text-light"><em>Message Details</em></h2>
    <div class="card">
        <div class="card-body text-light">
            <p><strong>Name:</strong> <%= message.firstName %> <%= message.lastName %></p>
            <p><strong>Email:</strong> <%= message.email %></p>
            <p><strong>Phone:</strong> <%= message.phoneNumber %></p>
            <p><strong>Message:</strong> <%= message.message %></p>
            <p><strong>Sent At:</strong> <%= message.createdAt.toLocaleString() %></p>
            <a href="/admin/messages" class="btn btn-secondary mt-3">Back to Messages</a>
        </div>
    </div>
</div>