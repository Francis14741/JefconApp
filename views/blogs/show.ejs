<% layout('partials/layout') %>

<div class="container py-5 text-light">
  <h1 class="mb-4"><em><u><%= blog.title %></u></em></h1>

  <div class="mb-4 text-light">
    <p><em><%= blog.content %></em></p>
  </div>

  <!-- Tags -->
  <p class="text-light">
    <strong><em><u>Tags:</u></em></strong>
    <% if (blog.tags && blog.tags.length) { %>
      <% blog.tags.forEach(tag => { %>
        <a href="/tags/<%= tag.slug %>" class="badge bg-primary me-1"><em><%= tag.title %></em></a>
      <% }) %>
    <% } else { %>
      <span><em>No tags assigned</em></span>
    <% } %>
  </p>

  <!-- Categories -->
  <p>
    <strong><em><u>Categories:</u></em></strong>
    <% if (blog.categories && blog.categories.length) { %>
      <% blog.categories.forEach(cat => { %>
        <a href="/categories/<%= cat.slug %>" class="badge bg-success me-1"><em><%= cat.title %></em></a>
      <% }) %>
    <% } else { %>
      <span><em>Uncategorized</em></span>
    <% } %>
  </p>

  <!-- Archive -->
  <p>
    <strong><em><u>Archive:</u></em></strong>
    <% if (blog.archive) { %>
      <a href="/archives/<%= blog.archive.slug %>" class="badge bg-success"><em><%= blog.archive.title %></em></a>
    <% } else { %>
      <span><em>No archive assigned</em></span>
    <% } %>
  </p>
</div>