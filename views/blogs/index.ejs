<% layout('partials/layout') %>

<div class="container py-4 text-light">
  <h1>All Blogs</h1>
  <div class="row">
    <% blogs.forEach(blog => { %>
      <div class="col-md-4 mb-3">
        <div class="card h-100 shadow-sm">
          <div class="card-body">
            <h5><a href="/blogs/<%= blog.slug %>"><%= blog.title %></a></h5>
            <p><%= blog.content.substring(0, 120) %>...</p>
            <a href="/blogs/<%= blog.slug %>" class="btn btn-primary btn-sm">Read More</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>