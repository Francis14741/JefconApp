<% layout('partials/layout') %>

    <div class="container py-4 bg-dark text-light">
      <h2 class="text-light mb-4"><em><u>Search Results for "<%= query %>"</u></em></h2>

      <% /* Blogs */ %>
      <% if (results.blogs && results.blogs.length) { %>
        <h4 class="mt-4">Blogs</h4>
        <div class="row">
          <% results.blogs.forEach(blog => { %>
            <div class="col-md-4 mb-3">
              <div class="card bg-secondary text-light h-100">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.name %></h5>
                  <p class="card-text"><%= blog.content %></p>
                  <a href="/blogs/<%= blog.slug %>" class="btn btn-primary btn-sm">Read More</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <p>No blogs found.</p>
      <% } %>

      <% /* FAQs */ %>
      <% if (results.faqs && results.faqs.length) { %>
        <h4 class="mt-4">FAQs</h4>
        <div class="row">
          <% results.faqs.forEach(faq => { %>
            <div class="col-md-6 mb-3">
              <div class="card bg-secondary text-light">
                <div class="card-body">
                  <h5 class="card-title"><%= faq.question %></h5>
                  <p class="card-text"><%= faq.answer %></p>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      <% } %>

      <% /* Tags */ %>
      <% if (results.tags && results.tags.length) { %>
        <h4 class="mt-4">Tags</h4>
        <div class="row">
          <% results.tags.forEach(tag => { %>
            <div class="col-md-3 mb-2">
              <a href="/tags/<%= tag.slug %>" class="btn btn-outline-light btn-sm w-100">
                <%= tag.name %>
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>

      <% /* Categories */ %>
      <% if (results.categories && results.categories.length) { %>
        <h4 class="mt-4">Categories</h4>
        <div class="row">
          <% results.categories.forEach(cat => { %>
            <div class="col-md-3 mb-2">
              <a href="/categories/<%= cat.slug %>" class="btn btn-outline-light btn-sm w-100">
                <%= cat.title %>
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>

      <% /* Archives */ %>
      <% if (results.archives && results.archives.length) { %>
        <h4 class="mt-4">Archives</h4>
        <div class="row">
          <% results.archives.forEach(archive => { %>
            <div class="col-md-4 mb-2">
              <a href="/archives/<%= archive.slug %>" class="btn btn-outline-light btn-sm w-100">
                <%= archive.title %>
              </a>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>

    
