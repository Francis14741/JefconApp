<% layout('partials/layout') %>

<div class="container my-4 text-light">
  <div class="row">
    <div class="col-md-6 mb-4">
      <div class="card shadow-sm h-100 bg-light text-success border-0">
        <div class="card-body text-center">
          <h1><em><%= faq.title %></em></h1>
          <p><em><%= faq.content %></em></p>
        </div>
      </div>
    </div>
  </div>

  <h2 class="text-center text-light mt-3"><em>Related Questions</em></h2>
  <p class="text-center text-light lead">
    <em> Additional questions related to our services and policies. </em>
  </p>
  <div class="accordion" id="faqAccordion">
    <% faqs.forEach((faq, index) => { %>
    <div class="row">
      <div class="col-md-6 mb-4">
        <div class="card">
          <div class="card-header" id="heading<%= index %>">
            <h5 class="mb-0">
              <button
                class="btn btn-link"
                type="button"
                data-toggle="collapse"
                data-target="#collapse<%= index %>"
              >
                <em><%= faq.question %></em>
              </button>
            </h5>
          </div>
          <div
            id="collapse<%= index %>"
            class="collapse"
            data-parent="#faqAccordion"
          >
            <div class="card-body"><em><%= faq.answer %></em></div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </div>
</div>
