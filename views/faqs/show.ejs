<% layout('partials/layout') %>

<div class="container my-4 text-light">

  <h2 class="text-light"><%= faq.title %></h2>
  <p><%= faq.question %></p>
  <p><%= faq.answer %></p>
</div>
  <h2 class="mb-3 text-light"><em><u><%= faq.category %></u></em></h2>
  <p class="text-light"><em><%= faq.description || "" %></em></p>

  <% if (faq.tags && faq.tags.length) { %>
    <p class="text-light">
      <strong><em><u>Tags:</u></em></strong>
      <% faq.tags.forEach(tag => { %>
        <span class="badge bg-secondary"><em><%= tag %></em></span>
      <% }) %>
    </p>
  <% } %>

  <hr>

  <h4>Questions & Answers</h4>
  <div class="accordion" id="faqAccordion">
    <% faq.questions.forEach((q, i) => { %>
      <div class="accordion-item">
        <h2 class="accordion-header" id="heading<%= i %>">
          <button class="accordion-button <%= i !== 0 ? 'collapsed' : '' %>"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#collapse<%= i %>"
                  aria-expanded="<%= i === 0 ? 'true' : 'false' %>"
                  aria-controls="collapse<%= i %>">
            <%= q.question %>
          </button>
        </h2>
        <div id="collapse<%= i %>"
             class="accordion-collapse collapse <%= i === 0 ? 'show' : '' %>"
             aria-labelledby="heading<%= i %>"
             data-bs-parent="#faqAccordion">
          <div class="accordion-body">
            <%= q.answer %>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
