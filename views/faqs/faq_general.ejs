<% layout('partials/layout') %>

  <div class="container py-5 text-center text-light">
    <h2 class="mb-4 text-center text-light text-primary"><em><u>Frequently Asked Questions</u></em></h2>
    <!-- âœ… FAQ Accordion -->
    <div class="container my-4">
    <h2 class="text-light"><em><u><%= faq.title %></u></em></h2>
    <ul class="list-group">
      <% faqs.forEach(faq => { %>
        <li class="list-group-item">
          <strong><%= faq.question %></strong><br>
          <%= faq.answer %>
        </li>
      <% }) %>
    </ul>

    <% if (faq.questions && faq.questions.length > 0) { %>
      <div class="accordion" id="faqAccordion">
        <% faq.questions.forEach((q, index) => { %>
          <div class="card">
            <div class="card-header" id="heading<%= index %>">
              <h5 class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse<%= index %>">
                  <%= q.question %>
                </button>
              </h5>
            </div>

            <div id="collapse<%= index %>" class="collapse" data-parent="#faqAccordion">
              <div class="card-body">
                <%= q.answer %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
    <p c;ass="text-light"><em>No FAQs found for this section.</em></p>
  <% } %>
</div>

