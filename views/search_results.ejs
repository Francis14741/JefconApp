<% layout('partials/layout') %>

<div class="container text-light my-4">
  <h3 class="mb-4 text-center"><em>Search Results for "<%= query %>"</em></h3>

  <% if (results.length === 0) { %>
    <div class="alert alert-warning text-center"><em>No results found.</em></div>
  <% } else { %>
    <div class="row">
      <% results.forEach(result => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <% if (result.type === "blog") { %>
                <h5 class="card-title"><a href="/blogs/<%= result.slug %>"><em><%= result.title %></em></a></h5>
                <p class="card-text"><em><%= result.excerpt || result.content.substring(0,100) %>...</em></p>
                <a href="/blogs/<%= result.slug %>" class="btn btn-sm btn-primary"><em>Read More</em></a>
              
              <% } else if (result.type === "faq") { %>
                <h5 class="card-title"><em><%= result.question %></em></h5>
                <p class="card-text text-muted"><em><%= result.answer %></em></p>

              <% } else if (result.type === "service") { %>
                <h5 class="card-title"><a href="/services/<%= result.slug %>"><em><%= result.title %></em></a></h5>
                <p class="card-text"><em><%= result.description.substring(0,120) %>...</em></p>

              <% } else if (result.type === "project") { %>
                <h5 class="card-title"><a href="/projects/<%= result.slug %>"><em><%= result.title %></em></a></h5>
                <p class="card-text"><em><%= result.description.substring(0,120) %>...</em></p>

              <% } else if (result.type === "category") { %>
                <h5 class="card-title"><a href="/categories/<%= result.slug %>"><em><%= result.title %></em></a></h5>
                <p class="text-muted"><em><u>Category</u></em></p>

              <% } else if (result.type === "tag") { %>
                <h5 class="card-title"><a href="/tags/<%= result.slug %>"><em><%= result.title %></em></a></h5>
                <p class="text-muted"><em><u>Tag</u></em></p>

              <% } else if (result.type === "archive") { %>
                <h5 class="card-title"><a href="/archives/<%= result.slug %>"><em><%= result.title %></em></a></h5>
                <p class="text-muted"><em><u>Archive</u></em></p>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>