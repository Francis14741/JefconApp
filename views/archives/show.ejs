<% layout('partials/layout') %>

<div class="container mt-5 text-light text-center">
  <h2><em><u><%= archive.title %></u></em></h2>
  <p><em><%= archive.description || '' %></em></p>

  <% if (blogs && blogs.length > 0) { %>
    <h4 class="text-light"><em>Related Blogs</em></h4>
    <ul>
      <% blogs.forEach(blog => { %>
        <li><a href="/blogs/<%= blog.slug %>"><%= blog.title %></a></li>
      <% }) %>
    </ul>
  <% } else { %>
    <p><em>No blogs found for this archive.</em></p>
  <% } %>
</div>