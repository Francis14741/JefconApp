              <p class="card-text">
                <%= service.content ? service.content.substring(0, 120) + "..." : "No description available." %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <% if (blogs.length === 0 && faqs.length === 0 && services.length === 0) { %>
    <p class="text-light"><em>No results found.</em></p>
  <% } %>
</div>