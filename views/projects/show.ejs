          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><a href="/tags/<%= tag.slug %>"><%= tag.title %></a></h5>
              <p class="card-text">
                <%= tag.content ? tag.content.substring(0, 120) + "..." : "No description available." %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <% if (categories.length > 0) { %>
    <h4 class="text-light"><em><u>Categories</u></em></h4>
    <div class="row">
      <% categories.forEach(faq => { %>
