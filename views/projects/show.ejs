<% layout('partials/layout') %>

<div class="container mt-5 text-light text-center">
  <h2 class="text-light"><em><u>Search Results for "<%= query %>"</u></em></h2>

  <% if (blogs.length > 0) { %>
    <h4 class="text-light"><em><u>Blogs</u></em></h4>
    <div class="row">
      <% blogs.forEach(blog => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><a href="/blogs/<%= blog.slug %>"><%= blog.title %></a></h5>
              <p class="card-text">
                <%= blog.content ? blog.content.substring(0, 120) + "..." : "No description available." %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <% if (faqs.length > 0) { %>
    <h4 class="text-light"><em><u>FAQs</u></em></h4>
    <div class="row">
      <% faqs.forEach(faq => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><a href="/faqs/<%= faq.slug %>"><%= faq.title %></a></h5>
              <p class="card-text">
                <%= faq.content ? faq.content.substring(0, 120) + "..." : "No description available." %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
  
  <% if (tags.length > 0) { %>
    <h4 class="text-light"><em><u>Tags</u></em></h4>
    <div class="row">
      <% tags.forEach(tag => { %>
