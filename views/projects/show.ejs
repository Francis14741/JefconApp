      <% }) %>
    </div>
  <% } %>
  
  <% if (services.length > 0) { %>
    <h4 class="text-light"><em><u>Services</u></em></h4>
    <div class="row">
      <% services.forEach(service => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
