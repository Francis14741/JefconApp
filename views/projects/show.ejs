              <h5 class="card-title"><a href="/categories/<%= categories.slug %>"><%= category.title %></a></h5>
              <p class="card-text">
                <%= category.content ? category.content.substring(0, 120) + "..." : "No description available." %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
  
  <% if (archives.length > 0) { %>
    <h4 class="text-light"><em><u>Archives</u></em></h4>
    <div class="row">
      <% archives.forEach(archive => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><a href="/archives/<%= archive.slug %>"><%= archive.title %></a></h5>
              <p class="card-text">
                <%= archive.content ? archive.content.substring(0, 120) + "..." : "No description available." %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
  
  <% if (projects.length > 0) { %>
    <h4 class="text-light"><em><u>Projects</u></em></h4>
    <div class="row">
      <% projects.forEach(project => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><a href="/projects/<%= project.slug %>"><%= project.title %></a></h5>
              <p class="card-text">
