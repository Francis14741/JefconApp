  <% if (tags && tags.length > 0) { %>
    <h4 class="mb-3"><em><u>Tags</u></em></h4>
    <div class="row">
      <% tags.forEach(tag => { %>
        <div class="col-md-3 mb-3">
          <a href="/tags/<%= tag.slug %>" class="btn btn-outline-info btn-block"><em><%= tag.name %></em></a>
        </div>
      <% }) %>
    </div>
  <% } %>

  <% if (
    (!blogs || blogs.length === 0) &&
    (!faqs || faqs.length === 0) &&
    (!services || services.length === 0) &&
    (!projects || projects.length === 0) &&
    (!archives || archives.length === 0) &&
    (!tags || tags.length === 0)
  ) { %>
    <p><em>No results found.</em></p>
  <% } %>
</div>


