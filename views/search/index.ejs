<% layout('partials/layout') %>

<div class="container mt-4 text-light">
  <h2 class="mb-3 text-light"><em><u>Search Results for "<%= query %>"</u></em></h2>

  <% if(results.length === 0){ %>
  <p class="text-light"><em>No results found.</em></p>
  <% } else { %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
      <% results.forEach(result => { %>
        <div class="col">
          <div class="card h-100">
            <div class="card-body">
              <% if(result.type === 'blog'){ %>
                <h5 class="card-title"><a href="/blogs/<%= result.slug %>"><%= result.title %></a></h5>
              <% } else if(result.type === 'faq'){ %>
                <h5 class="card-title"><a href="/faqs/<%= result.slug %>"><%= result.title %></a></h5>
              <% } else if(result.type === 'service'){ %>
                <h5 class="card-title"><a href="/services/<%= result.slug %>"><%= result.title %></a></h5>
              <% } else if(result.type === 'project'){ %>
                <h5 class="card-title"><a href="/projects/<%= result.slug %>"><%= result.title %></a></h5>
              <% } else if(result.type === 'archive'){ %>
                <h5 class="card-title"><a href="/archives/<%= result.slug %>"><%= result.title %></a></h5>
              <% } else if(result.type === 'tag'){ %>
                <h5 class="card-title"><a href="/tags/<%= result.slug %>"><%= result.title %></a></h5>
              <% } else if(result.type === 'category'){ %>
                <h5 class="card-title"><a href="/categories/<%= result.slug %>"><%= result.title %></a></h5>
              <% } %>

              <% if(result.description){ %>
                <p class="card-text"><%= result.description %></p>
              <% } %>
            </div>
            <div class="card-footer text-end">
              <% if(result.type === 'blog'){ %>
                <a href="/blogs/<%= result.slug %>" class="btn btn-sm btn-primary">Read More</a>
              <% } else if(result.type === 'faq'){ %>
                <a href="/faqs/<%= result.slug %>" class="btn btn-sm btn-primary">Read More</a>
              <% } else if(result.type === 'service'){ %>
                <a href="/services/<%= result.slug %>" class="btn btn-sm btn-primary">Read More</a>
              <% } else if(result.type === 'project'){ %>
                <a href="/projects/<%= result.slug %>" class="btn btn-sm btn-primary">Read More</a>
              <% } else if(result.type === 'archive'){ %>
                <a href="/archives/<%= result.slug %>" class="btn btn-sm btn-primary">Read More</a>
              <% } else if(result.type === 'tag'){ %>
                <a href="/tags/<%= result.slug %>" class="btn btn-sm btn-primary">View Tag</a>
              <% } else if(result.type === 'category'){ %>
                <a href="/categories/<%= result.slug %>" class="btn btn-sm btn-primary">View Category</a>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>



